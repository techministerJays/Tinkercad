//by Jayrose Bunda
// LED Lightshow using Arduino UNO

void setup()
{
    Serial.begin(9600);
  	pinMode(2, OUTPUT);
    pinMode(3, OUTPUT);
    pinMode(4, OUTPUT);
    pinMode(5, OUTPUT);
    pinMode(6, OUTPUT);
    pinMode(7, OUTPUT);
    pinMode(8, OUTPUT);
    pinMode(9, OUTPUT);
    pinMode(10, OUTPUT);
    pinMode(11, OUTPUT);
    pinMode(12, OUTPUT);
    pinMode(13, OUTPUT);
}


void LedLightShow1()
{
 	//CICT RED (START)	
  	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
 	delay(200);
  	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
 	digitalWrite(4, LOW);
 	//CICT RED (END)	

 	//CICT BLUE (START)	
  	digitalWrite(12, HIGH);
 	digitalWrite(9, HIGH);
 	digitalWrite(6, HIGH);
 	digitalWrite(3, HIGH);
 	delay(200);
 	digitalWrite(12, LOW);
 	digitalWrite(9, LOW);
 	digitalWrite(6, LOW);
 	digitalWrite(3, LOW);
 	//CICT BLUE (END)	

 	//CICT GREEN (START)	
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
 	//CICT END (END)	

  	//CICT YELLOW (START)	  
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
  	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
   	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
    digitalWrite(4, LOW);
  	//CICT YELLOW (END)	  
	
	//CICT RED (START)	
  	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
 	delay(200);
  	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
 	digitalWrite(4, LOW);
 	//CICT RED (END)	

 	//CICT BLUE (START)	
  	digitalWrite(12, HIGH);
 	digitalWrite(9, HIGH);
 	digitalWrite(6, HIGH);
 	digitalWrite(3, HIGH);
 	delay(200);
 	digitalWrite(12, LOW);
 	digitalWrite(9, LOW);
 	digitalWrite(6, LOW);
 	digitalWrite(3, LOW);
 	//CICT BLUE (END)	

 	//CICT GREEN (START)	
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
 	//CICT END (END)	

  	//CICT YELLOW (START)	  
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
  	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
   	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
    digitalWrite(4, LOW);
  	//CICT YELLOW (END)	  
//CICT RED (START)	
  	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
 	delay(200);
  	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
 	digitalWrite(4, LOW);
 	//CICT RED (END)	

 	//CICT BLUE (START)	
  	digitalWrite(12, HIGH);
 	digitalWrite(9, HIGH);
 	digitalWrite(6, HIGH);
 	digitalWrite(3, HIGH);
 	delay(200);
 	digitalWrite(12, LOW);
 	digitalWrite(9, LOW);
 	digitalWrite(6, LOW);
 	digitalWrite(3, LOW);
 	//CICT BLUE (END)	

 	//CICT GREEN (START)	
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
 	//CICT END (END)	

  	//CICT YELLOW (START)	  
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
  	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
   	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
    digitalWrite(4, LOW);
  	//CICT YELLOW (END)	  
	
	//CICT RED (START)	
  	digitalWrite(13, HIGH);
 	digitalWrite(10, HIGH);
 	digitalWrite(7, HIGH);
 	digitalWrite(4, HIGH);
 	delay(200);
  	digitalWrite(13, LOW);
 	digitalWrite(10, LOW);
 	digitalWrite(7, LOW);
 	digitalWrite(4, LOW);
 	//CICT RED (END)	

 	//CICT BLUE (START)	
  	digitalWrite(12, HIGH);
 	digitalWrite(9, HIGH);
 	digitalWrite(6, HIGH);
 	digitalWrite(3, HIGH);
 	delay(200);
 	digitalWrite(12, LOW);
 	digitalWrite(9, LOW);
 	digitalWrite(6, LOW);
 	digitalWrite(3, LOW);
 	//CICT BLUE (END)	

 	//CICT GREEN (START)	
 	digitalWrite(11, HIGH);
 	digitalWrite(8, HIGH);
 	digitalWrite(5, HIGH);
 	digitalWrite(2, HIGH);
 	delay(200);
  	digitalWrite(11, LOW);
 	digitalWrite(8, LOW);
 	digitalWrite(5, LOW);
 	digitalWrite(2, LOW);
 	//CICT END (END)	

